<div class=container>
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors", obj: @article%>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="firm-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light mb-3" %>
          <div class="col-sm-10">
            <%=f.text_field  :title, class: "form-control shadow rounded", placeholder: "Title of Article" %>
          </div>
        </div>

        <div class="firm-group row mb-3"> 
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%=f.text_area  :description, rows: 2, class: "form-control shadow rounded", placeholder: "Description of Article" %>
          </div>
        </div>

        <div class="firm-group row mb-3">
          <%= f.label :post, class: "col-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%=f.text_area  :post, rows: 10, class: "form-control shadow rounded", placeholder: "Body of Article" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="input-group mb-3">
              <div class="col-10 offset-md-2">
                <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
                  <% cb.label(class: "checkbox-inline input_checkbox mr-2 text-light") {cb.check_box(class: "checkbox") + cb.text} %>
                <% end %>
              </div>
          </div>
        </div>

        <div class="firm-group row justify-content-center"> 
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>

      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[ Cancel and Return to articles listing ]', articles_path, class: "text-info" %>
    </div>
  </div>
</div>
